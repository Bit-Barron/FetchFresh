generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  username          String   @unique
  password          String
  role              Role     @default(CUSTOMER)
  orders            Order[]
  firstName         String?
  lastName          String?
  address           String?
  phoneNumber       String?
  zipCode           String?
  city              String?
  email             String?

  ShoppingListItem ShoppingListItem[]
}

model Order {
  id          String        @id @default(cuid())
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  status      OrderStatus    @default(PENDING)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  products    OrderProduct[]
  totalAmount Float
  email       String?
  phoneNumber String?
  firstName   String?
  lastName    String?
  address     String?
  city        String?
  zipCode     String?
}


model ShoppingListItem {
  id             String      @id @default(cuid())
  userId         String
  user            User     @relation(fields: [userId], references: [id])
  productId      String
  name           String
  quantity       Int
  imageURL       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model OrderProduct {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
  productId String
  quantity  Int
  name      String
  image     String
  price     Int
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum Role {
  CUSTOMER
  SHOPPER
  ADMIN
}
